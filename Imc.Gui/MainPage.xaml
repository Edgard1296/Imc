<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imc.Gui.MainPage"
             Shell.BackgroundColor="#512BD4"
             Shell.TitleColor="White"
             Title="Indice de masa corporal">

    <VerticalStackLayout
        Margin="24"
        Padding="16"
        Spacing="24">

        <Border
            Stroke="LightGray"
            Padding="16">
            
            
            <VerticalStackLayout>
                <Label
                    Text="Peso en kilogramos"/>
                <Entry />
                <Label
                    Text="Estatura en metros"/>
                <Entry /> 

            </VerticalStackLayout>
        </Border>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="36">
            <Button
               Text="Calcular"
                FontSize="Small"/>
            <Button
                Text="Limpiar"
                FontSize="Small"/>


        </HorizontalStackLayout>
        <Border
            Stroke="LightGray">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <VerticalStackLayout
                Padding="16"
                Spacing="4">
                <Label
                    Text="El indice demasa corporal de la persona es:"
                    FontSize="Small"/>

                <Label
                    Text="24.1234"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>
                <Label
                        Text="La situacion nutricional de la persona es:"
                    FontSize="Small"/>
                <Label
                    Text="Peso normal"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>

            </VerticalStackLayout>
            
        </Border>
            
        
    </VerticalStackLayout>

</ContentPage>
